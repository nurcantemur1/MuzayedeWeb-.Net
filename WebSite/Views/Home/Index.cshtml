<div class="container-fluid  ">
    <div class="row ">
        @foreach (var muzayede in Model.MuzayedeList)
        {
            <div class="col-md-6">
                &nbsp;
                <div class="card ">
                    <div class="card-body text-center">
                        <img src="~/karma/img/4p.PNG" width="600px" height="150px">

                        <p></p>

                        <!-- Start exclusive deal Area -->
                        <section class="exclusive-deal-area">
                            <div class="container-fluid">
                                <div class="row justify-content-center align-items-center">
                                    <div class="row clock_sec clockdiv" id="clockdiv">
                                        <div class="col-lg-12">
                                            <h1> <span class="badge badge-secondary">@muzayede.MuzayedeAdi Müzayedesi</span></h1>
                                        </div>
                                        <script>

                                            var gun = "";
                                            var saat = "";
                                            var dk = "";
                                            var sn = "";

                                            $(function() {
                                                $("@muzayede.MuzayedeID").countdowntimer({
                                                    //startDate : "2021/06/06 21:11:46",
                                                    dateAndTime: "2021/06/19 21:30:00",
                                                    //  size : "lg"
                                                    size: "md",
                                                    regexpMatchFormat: "([0-9]{1,2}):([0-9]{1,2}):([0-9]{1,2}):([0-9]{1,2})",
                                                    gun = $1;
                                                //regexpReplaceWith: "  $1<sup>Gün</sup> $2<sup>Saat</sup> $3<sup>Dakika</sup> $4<sup>saniye</sup>"

                                            });

                                            });

                                            $(document).getElementsByClassName("days").getElementById("@muzayede.MuzayedeID").innerHTML = gun;
                                            $(document).getElementsByClassName("hours").getElementById("@muzayede.MuzayedeID").innerHTML = saat;
                                            $(document).getElementsByClassName("minutes").getElementById("@muzayede.MuzayedeID").innerHTML = dk;
                                            $(document).getElementsByClassName("seconds").getElementById("@muzayede.MuzayedeID").innerHTML = sn;


                                        </script>
                                        <div class="col-lg-12">
                                            <div class="row clock-wrap">
                                                <div class="col clockinner1 clockinner">
                                                    <h1 class="days" id="@muzayede.MuzayedeID">@((DateTime.Now - muzayede.MTarih).Days)</h1>
                                                    <span class="smalltext">Days</span>
                                                </div>
                                                <div class="col clockinner clockinner1">
                                                    <h1 class="hours" id="@muzayede.MuzayedeID">@((DateTime.Now - muzayede.MTarih).Hours)</h1>
                                                    <span class="smalltext">Hours</span>
                                                </div>
                                                <div class="col clockinner clockinner1">
                                                    <h1 class="minutes" id="@muzayede.MuzayedeID">@((DateTime.Now - muzayede.MTarih).Minutes)</h1>
                                                    <span class="smalltext">Mins</span>
                                                </div>
                                                <div class="col clockinner clockinner1">
                                                    <h1 class="seconds" id="@muzayede.MuzayedeID">@((DateTime.Now - muzayede.MTarih).Seconds)</h1>
                                                    <span class="smalltext">Secs</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <input class="btn-lg btn-danger" type="submit" onClick="location.href = '@Url.Action("Kontrol","Mezat",new { muzayedeId = muzayede.MuzayedeID })'" value='İncele'>

                            </div>

                        </section>
                        <!-- End exclusive deal Area -->
                    </div>
                </div>


            </div>

        }
    </div>
</div>

