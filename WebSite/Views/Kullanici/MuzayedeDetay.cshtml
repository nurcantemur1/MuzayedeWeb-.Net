
@{
    ViewBag.Title = "MuzayedeDetay";
}

@model WebService.Model.MuzayedeModel


<div class="container" style="margin-top: 10%">

    <h1 style="padding-left: 400px">Müzayede Ürünleri Listesi</h1>
    <div class="row">
        <div class="col">

            <p>
                <a href="@Url.Action("UrunListesi", "Mezat")" type="submit" class="btn-lg btn-danger">Ürün Ekle</a>

            </p>
            <table class="table">
                <tr>
                    <th>
                        Resim
                    </th>
                    <th>
                        Urun Adı
                    </th>
                    <th>
                        UrunAciklamasi
                    </th>
                    <th>
                        UrunFiyat
                    </th>
                    <th>
                        İşlem
                    </th>
                </tr>

                @if (Model.muzayedeUrunleri != null && Model.muzayedeUrunleri.Count > 0)
                {
                    foreach (var item in Model.muzayedeUrunleri.ToList())
                    {
                        <tr>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.urun.Rsim)*@
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.urun.UrunAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.urun.UrunAciklamasi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.urun.UrunFiyat)
                            </td>
                            <td>
                                <a href="@Url.Action("MurunDelete", "Kullanici", new {murunId = item.ID})">Sil</a>
                            </td>
                        </tr>
                    }
                }


            </table>
            <a href="@Url.Action("MuzayedeKaydet", "Mezat")"> Kaydet</a>
        </div>


    </div>
</div>

