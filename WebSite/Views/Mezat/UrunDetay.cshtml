
@{
    ViewBag.Title = "UrunDetay";
}

@model WebService.DB.Urun

@if (Model != null)
{

    <div class="container mt-5 mb-5" style="padding-top:100px">
        <div class="row d-flex justify-content-center">
            <div class="col-md-10">
                <div class="card">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="images p-3">
                                <div class="text-center p-4"> <img id="main-image" src="https://i.imgur.com/Dhebu4F.jpg" width="250" /> </div>
                                <div class="thumbnail text-center"> <img onclick="change_image(this)" src="https://i.imgur.com/Rx7uKd0.jpg" width="70"> <img onclick="change_image(this)" src="https://i.imgur.com/Dhebu4F.jpg" width="70"> </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="product p-4">
                                <form action="/Mezat/UrunDetay" method="POST">
                                    <div class="mt-4 mb-3 text-center" style="padding-top: 50px">
                                        <span class="text-uppercase text-muted brand"></span>
                                        <h5> Urun Adı :</h5>
                                        <input value="@Model.UrunAdi" type="text" name="UrunAdi" class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm">
                                        &nbsp;
                                        <br />
                                        <h5> Urun Fiyatı :</h5>
                                        <input value="@Model.UrunFiyat" type="text" name="UrunFiyat" class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm">
                                        &nbsp;
                                        <br />
                                        <h5> Urun Adedi :</h5>
                                        <input value="@Model.UrunAdet" type="text" name="UrunAdet" class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm">
                                        &nbsp;
                                        <br />
                                        <h5> Urun Açıklaması :</h5>
                                        <input value="@Model.UrunAciklamasi" type="text" name="UrunAciklamasi" class="border rounded h-10 w-full focus:outline-none focus:border-green-200 px-2 mt-2 text-sm">
                                        &nbsp;
                                        <input hidden value="@Model.KullaniciID" type="number" name="KullaniciID" />
                                        <input hidden value="@Model.UrunDurum" type="checkbox" name="UrunDurum" />
                                        <input hidden value="@Model.KategoriID" type="number" name="KategoriID" />
                                        <input hidden value="@Model.UrunID" type="number" name="UrunID" />



                                        <br />
                                        <br />
                                        <input type="submit" class="btn btn-lg btn-danger" value="Kaydet" />
                                    </div>
                                </form>
                                <div class="cart mt-4 align-items-center">

                                    <i class="fa fa-heart text-muted"></i> <i class="fa fa-share-alt text-muted"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}