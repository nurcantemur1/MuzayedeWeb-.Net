
@{
    ViewBag.Title = "UrunListesi";
}
@model List<WebSite.Models.ListUrunModel>


<div class="container" style="margin-top: 10%">
    <h1 style="padding-left: 400px">Ürün Listesi</h1>

    <div class="row">
        <div class="col">

            <p>
                <a href="@Url.Action("YeniUrun", "Mezat")" type="submit" class="btn-lg btn-danger">Yeni Ürün</a>

            </p>
            @using (Html.BeginForm("UrunListesi", "Mezat", FormMethod.Post))
            {

                <table class="table">
                    <tr>
                        <th>
                            Resim
                        </th>
                        <th>
                            Urun Adı
                        </th>
                        <th>
                            UrunAciklamasi
                        </th>
                        <th>
                            UrunFiyat
                        </th>
                        <th>
                            İşlem
                        </th>
                    </tr>

                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            @Html.HiddenFor(modelItem => Model[i].urun.UrunID)
                            <td>
                                @*@Html.DisplayFor(modelItem => Model[i].urun.Rsim)*@
                            </td>
                            <td>

                                @Html.DisplayFor(modelItem => Model[i].urun.UrunAdi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model[i].urun.UrunAciklamasi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => Model[i].urun.UrunFiyat)
                            </td>
                            <td>
                                @Html.CheckBoxFor(modelItem => Model[i].check)
                            </td>
                        </tr>
                    }

                </table>
                <input type="submit" class="btn-lg btn-danger" value="Müzayedene Ekle"/>
            }

        </div>
    </div>
</div>

